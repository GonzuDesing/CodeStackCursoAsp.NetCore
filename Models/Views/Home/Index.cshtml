@{
    ViewData["Title"] = "Home Page";
}
@model Usuario
<div class="container">
    <!--definimos el tipo asp-->
    <form asp-action="SetUsuario" asp-contoller="Home" method="POST">
        <div class="form-group col-md-6">
            <label>Nombres</label>
            <!--Captura datos desde el modelo con asp-for
    Se debe especificar el modelo usado
    -->
            <input type="text" asp-for="Nombres" class="form-control">

            <!--Aca se van a mostrar los mensajes de validacion -->
            <span asp-validation-for="Nombres" class="badge bg-red"></span>


        </div>

        <div class="form-group col-md-6">
            <label>Apellidos</label>
            <input type="text" asp-for="Apellidos" class="form-control">
            <span asp-validation-for="Apellidos" class="badge bg-red"></span>
        </div>

        <div class="form-group col-md-6">
            <label>DUI</label>
            <input type="text" asp-for="Dui" class="form-control">
            <span asp-validation-for="Dui" class="badge bg-red"></span>

        </div>

        <div class="form-group col-md-6">
            <label>Correo</label>
            <input type="text" asp-for="Correo" class="form-control">
            <span asp-validation-for="Correo" class="badge bg-red"></span>

        </div>

        <div class="form-group col-md-6">
            <label>Estado</label>
            <input type="checkbox" asp-for="EstaActivo" class="form-control">

        </div>

        <div class="form-group col-md-6">
            <label>Fecha de Nacimiento</label>
            <input asp-for="FechaNacimiento" class="form-control">
            <span asp-validation-for="FechaNacimiento" class="badge bg-red"></span>

        </div>

        <div class="form-group col-md-6">
            <label>Edad</label>
            <input asp-for="Edad" class="form-control">
            <span asp-validation-for="Edad" class="badge bg-red"></span>

           
        </div>

        <div class="row">
            <button type="submit" class="btn btn-primary">Guardar</button>

        </div>
    </form>
</div>
